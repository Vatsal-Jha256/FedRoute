<?xml version="1.0" encoding="UTF-8"?>
<!-- Vehicle routes for FedRoute demo -->
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    
    <!-- Vehicle types -->
    <vType id="federated_vehicle" accel="2.6" decel="4.5" sigma="0.5" length="5.0" minGap="2.5" maxSpeed="20.0" guiShape="passenger" width="2.0" color="0,1,0"/>
    
    <!-- Routes (circular routes that loop) -->
    <route id="route0" edges="E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3"/>
    <route id="route1" edges="E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0"/>
    <route id="route2" edges="E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1"/>
    <route id="route3" edges="E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2 E3 E0 E1 E2"/>
    <route id="route4" edges="E3 E4 E2 E3 E4 E2 E3 E4 E2 E3 E4 E2 E3 E4 E2 E3"/>
    
    <!-- Vehicles (10 clients) - larger, slower, more visible -->
    <vehicle id="vehicle_00" type="federated_vehicle" route="route0" depart="0" color="1,0,0" departSpeed="max"/>
    <vehicle id="vehicle_01" type="federated_vehicle" route="route1" depart="3" color="0,1,0" departSpeed="max"/>
    <vehicle id="vehicle_02" type="federated_vehicle" route="route2" depart="6" color="0,0,1" departSpeed="max"/>
    <vehicle id="vehicle_03" type="federated_vehicle" route="route3" depart="9" color="1,1,0" departSpeed="max"/>
    <vehicle id="vehicle_04" type="federated_vehicle" route="route0" depart="12" color="1,0,1" departSpeed="max"/>
    <vehicle id="vehicle_05" type="federated_vehicle" route="route1" depart="15" color="0,1,1" departSpeed="max"/>
    <vehicle id="vehicle_06" type="federated_vehicle" route="route2" depart="18" color="1,0.5,0" departSpeed="max"/>
    <vehicle id="vehicle_07" type="federated_vehicle" route="route3" depart="21" color="0.5,0,1" departSpeed="max"/>
    <vehicle id="vehicle_08" type="federated_vehicle" route="route4" depart="24" color="0,1,0.5" departSpeed="max"/>
    <vehicle id="vehicle_09" type="federated_vehicle" route="route0" depart="27" color="1,0,0.5" departSpeed="max"/>
    
</routes>


